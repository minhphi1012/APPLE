class MainActivity : ComponentActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        enableEdgeToEdge()
        setContent {
            UIComponentsAppTheme {
                AppNavigation()
            }
        }
    }
}

// --- 1. CẤU TRÚC DỮ LIỆU ---
data class UIComponentItem(val title: String, val description: String, val route: String, val isHighlight: Boolean = false)

val displayGroup = listOf(
    UIComponentItem("Text", "Displays text", "text_detail"),
    UIComponentItem("Image", "Displays an image", "image_detail")
)

val inputGroup = listOf(
    UIComponentItem("TextField", "Input field for text", "textfield_detail"),
    UIComponentItem("PasswordField", "Input field for passwords", "PasswordField_detail")
)

val layoutGroup = listOf(
    UIComponentItem("Column", "Arranges elements vertically", "column_detail"),
    UIComponentItem("Row", "Arranges elements horizontally", "row_detail")
)

val homeworkItem = UIComponentItem("Các phần đã bổ sung thêm ", "Các thành phần UI cơ bản   ", "more_components", true)


// --- 2. ĐIỀU HƯỚNG (NAVIGATION) ---
@Composable
fun AppNavigation() {
    val navController = rememberNavController()

    // Đổi startDestination thành "welcome_screen"
    NavHost(navController = navController, startDestination = "welcome_screen") {

        // Màn hình Chào mừng (Mới)
        composable("welcome_screen") { WelcomeScreen(navController) }

        composable("home_list") { HomeScreen(navController) }
        composable("text_detail") { TextDetailScreen(navController) }
        composable("image_detail") { ImageDetailScreen(navController) }
        composable("textfield_detail") { TextFieldDetailScreen(navController) }

        composable("column_detail") { ColumnDetailScreen(navController) }
        composable("row_detail") { RowDetailScreen(navController) }

        composable("more_components") { MoreComponentsScreen(navController) }
    }
}

// --- 3. MÀN HÌNH WELCOME (MỚI THÊM) ---
@Composable
fun WelcomeScreen(navController: NavController) {
    Scaffold(
        containerColor = Color.White
    ) { padding ->
        Column(
            modifier = Modifier
                .padding(padding)
                .fillMaxSize()
                .padding(24.dp),
            horizontalAlignment = Alignment.CenterHorizontally,
            verticalArrangement = Arrangement.SpaceBetween // Đẩy nội dung ra 2 đầu
        ) {
            // Phần nội dung ở giữa (Logo + Text)
            Column(
                modifier = Modifier.weight(1f),
                horizontalAlignment = Alignment.CenterHorizontally,
                verticalArrangement = Arrangement.Center
            ) {
                // Logo (Dùng Icon thay thế hoặc Image nếu có file logo)
                Image(
                    painter = painterResource(id = R.drawable.logo_jetpack), // Gọi đến file logo_jetpack.png bạn vừa chép vào
                    contentDescription = "Jetpack Compose Logo",
                    modifier = Modifier.size(120.dp) // Kích thước logo (có thể điều chỉnh)
                )

                Spacer(modifier = Modifier.height(32.dp))

                Text(
                    text = "Jetpack Compose",
                    fontSize = 28.sp,
                    fontWeight = FontWeight.Bold,
                    color = Color.Black
                )

                Spacer(modifier = Modifier.height(16.dp))

                Text(
                    text = "Jetpack Compose is a modern UI toolkit for building native Android applications using a declarative programming approach.",
                    textAlign = TextAlign.Center,
                    color = Color.Gray,
                    fontSize = 16.sp,
                    lineHeight = 24.sp
                )
            }

            // Nút bấm ở dưới cùng
            Button(
                onClick = {
                    // Chuyển sang màn hình danh sách và xóa màn hình Welcome khỏi lịch sử back
                    navController.navigate("home_list") {
                        popUpTo("welcome_screen") { inclusive = true }
                    }
                },
                modifier = Modifier
                    .fillMaxWidth()
                    .height(50.dp),
                colors = ButtonDefaults.buttonColors(containerColor = Color(0xFF2196F3)),
                shape = RoundedCornerShape(25.dp) // Bo tròn nút
            ) {
                Text(text = "I'm ready", fontSize = 18.sp, fontWeight = FontWeight.Bold)
            }
        }
    }
}


// --- 4. MÀN HÌNH CHÍNH (LIST) ---
@OptIn(ExperimentalMaterial3Api::class)
@Composable
fun HomeScreen(navController: NavController) {
    Scaffold(
        topBar = {
            TopAppBar(
                title = {
                    Box(modifier = Modifier.fillMaxWidth(), contentAlignment = Alignment.Center) {
                        Text("UI Components List", color = Color(0xFF1976D2), fontWeight = FontWeight.Bold)
                    }
                },
                colors = TopAppBarDefaults.topAppBarColors(containerColor = Color.White)
            )
        }
    ) { innerPadding ->
        LazyColumn(
            modifier = Modifier
                .padding(innerPadding)
                .padding(16.dp),
            verticalArrangement = Arrangement.spacedBy(10.dp)
        ) {
            item { SectionHeader("Display") }
            items(displayGroup) { item -> ComponentCard(item, navController) }

            item { SectionHeader("Input") }
            items(inputGroup) { item -> ComponentCard(item, navController) }

            item { SectionHeader("Layout") }
            items(layoutGroup) { item -> ComponentCard(item, navController) }

            item { Spacer(modifier = Modifier.height(16.dp)) }
            item { ComponentCard(homeworkItem, navController) }
        }
    }
}

@Composable
fun SectionHeader(title: String) {
    Text(
        text = title,
        fontWeight = FontWeight.Bold,
        fontSize = 14.sp,
        color = Color.Gray,
        modifier = Modifier.padding(top = 8.dp, bottom = 4.dp)
    )
}

@Composable
fun ComponentCard(item: UIComponentItem, navController: NavController) {
    val backgroundColor = if (item.isHighlight) Color(0xFFFFCDD2) else Color(0xFFE3F2FD)

    Card(
        colors = CardDefaults.cardColors(containerColor = backgroundColor),
        modifier = Modifier
            .fillMaxWidth()
            .clickable { navController.navigate(item.route) },
        shape = RoundedCornerShape(12.dp)
    ) {
        Column(modifier = Modifier.padding(16.dp)) {
              Text(text = item.title, fontWeight = FontWeight.Bold, color = Color.Black, fontSize = 16.sp)
            Text(text = item.description, style = MaterialTheme.typography.bodySmall, color = Color.DarkGray)
        }
    }
}

// --- 5. CÁC MÀN HÌNH CHI TIẾT ---

@OptIn(ExperimentalMaterial3Api::class)
@Composable
fun TextDetailScreen(navController: NavController) {
    Scaffold(topBar = { CommonTopBar("Text Detail", navController) }) { padding ->
        Column(
            modifier = Modifier
                .padding(padding)
                .fillMaxSize()
                .padding(20.dp),
            verticalArrangement = Arrangement.Center,
            horizontalAlignment = Alignment.CenterHorizontally
        ) {
            Text(
                text = buildAnnotatedString {
                    append("The quick ")
                    withStyle(style = SpanStyle(color = Color(0xFFA1887F), fontWeight = FontWeight.Bold, fontSize = 28.sp)) { append("Brown\n") }
                    append("fox j u m p s ")
                    withStyle(style = SpanStyle(fontWeight = FontWeight.Bold)) { append("over\n") }
                    withStyle(style = SpanStyle(textDecoration = androidx.compose.ui.text.style.TextDecoration.Underline)) { append("the") }
                    withStyle(style = SpanStyle(fontStyle = FontStyle.Italic)) { append(" lazy dog.") }
                },
                fontSize = 24.sp,
                lineHeight = 40.sp
            )
        }
    }
}

@OptIn(ExperimentalMaterial3Api::class)
@Composable
fun ImageDetailScreen(navController: NavController) {
    Scaffold(topBar = { CommonTopBar("Images", navController) }) { padding ->
        Column(modifier = Modifier
            .padding(padding)
            .padding(16.dp)
            .verticalScroll(rememberScrollState()), horizontalAlignment = Alignment.CenterHorizontally) {

            // Hình 1
            Card(modifier = Modifier
                .fillMaxWidth()
                .height(250.dp), shape = RoundedCornerShape(16.dp), elevation = CardDefaults.cardElevation(4.dp)) {
                Image(
                    painter = painterResource(id = R.drawable.image_616905),
                    contentDescription = "Hinh 1",
                    contentScale = ContentScale.Crop,
                    modifier = Modifier.fillMaxSize()
                )
            }

            Spacer(modifier = Modifier.height(20.dp))

            // Hình 2
            Card(modifier = Modifier
                .fillMaxWidth()
                .height(250.dp), shape = RoundedCornerShape(16.dp), elevation = CardDefaults.cardElevation(4.dp)) {
                Image(
                    painter = painterResource(id = R.drawable.image_616ce9),
                    contentDescription = "Hinh 2",
                    contentScale = ContentScale.Crop,
                    modifier = Modifier.fillMaxSize()
                )
            }
        }
    }
}

// --- PHẦN BẠN YÊU CẦU SỬA: TEXT FIELD VỚI DÒNG CHỮ ĐỎ ---
@OptIn(ExperimentalMaterial3Api::class)
@Composable
fun TextFieldDetailScreen(navController: NavController) {
    var textInput by remember { mutableStateOf("") }
    var passwordInput by remember { mutableStateOf("") }
    Scaffold(topBar = { CommonTopBar("TextField", navController) }) { padding ->
        Column(modifier = Modifier
            .padding(padding)
            .padding(20.dp)
            .fillMaxSize(), horizontalAlignment = Alignment.CenterHorizontally, verticalArrangement = Arrangement.spacedBy(12.dp)) {

            // Ô nhập liệu
            OutlinedTextField(
                value = textInput,
                onValueChange = { textInput = it },
                label = { Text("Thông tin nhập") },
                modifier = Modifier.fillMaxWidth()
            )

            // Dòng chữ đỏ bạn yêu cầu thêm vào
            Text(
                text = "Tự động cập nhật dữ liệu theo textfield",
                color = Color.Red,
                // fontSize = 14.sp // Có thể chỉnh cỡ chữ nếu cần
            )

        }
    }
}
